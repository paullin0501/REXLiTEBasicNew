<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Max2SettingActivity">
<include
android:id="@+id/include"
layout="@layout/maxlite_toolbar"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="304dp"
        android:layout_height="204dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:srcCompat="@drawable/max2_head" />

   <!-- <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView10"
        app:layout_constraintBottom_toTopOf="@id/cardview"
        app:singleSelection="true"
        android:orientation="horizontal"
        app:selectionRequired="true"
        app:checkedButton="@id/button">-->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ch_constranint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView10"
    app:layout_constraintBottom_toTopOf="@+id/scroller">
        <Button
            android:id="@+id/ch1_button"
            style="@style/Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ch2_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="CH1" />
    <!--android:translationX="12.5dp"-->

        <Button
            android:id="@+id/ch2_button"
            style="@style/Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ch1_button"
            app:layout_constraintTop_toTopOf="@id/ch1_button"
            app:layout_constraintBottom_toBottomOf="@id/ch1_button"
            android:text="CH2" />
    <!--android:translationX="-12.5dp"-->
</androidx.constraintlayout.widget.ConstraintLayout>
    <!--</com.google.android.material.button.MaterialButtonToggleGroup>-->
<ScrollView
    android:id="@+id/scroller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/ch_constranint"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_constranint">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/Brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Brightness"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar"
                app:layout_constraintStart_toEndOf="@+id/image_degree"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.623" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="%"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/shortcutButton" />

            <ImageView
                android:id="@+id/image_degree"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/seekBar"
                app:layout_constraintTop_toBottomOf="@id/Brightness" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                app:layout_constraintStart_toEndOf="@id/image_degree"
                app:layout_constraintTop_toBottomOf="@id/percent" />

            <Button
                android:id="@+id/shortcutButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Add to shortcut"
                android:textColor="#F08500"
                app:icon="@drawable/addshortcut"
                app:iconTint="#F08500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/expand_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:textAllCaps="false"
                android:text="Sleeping Mode"
                app:icon="@drawable/ic_baseline_expand_more_24"
                app:iconTint="#C1C1C1"
                android:textColor="#8E8E8E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="85dp"
                app:layout_constraintTop_toBottomOf="@id/image_degree"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expand_brightness_text"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Brightness"
                app:layout_constraintTop_toBottomOf="@+id/expand_button"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/expand_button"
                app:layout_constraintStart_toEndOf="@id/expand_brightness_text"

                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@color/white"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/brightnessup_selector"
                    />
                <RadioButton
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:button="@color/white"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/brightnessdown_selector"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timing_text"
                android:text="Timing"
                app:layout_constraintTop_toBottomOf="@+id/expand_brightness_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="45dp"
                android:layout_marginTop="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting_timing"
                android:text="03hrs 10min"
                app:layout_constraintStart_toEndOf="@+id/timing_text"
                app:layout_constraintTop_toTopOf="@+id/timing_text"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TimePicker
                android:id="@+id/timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timing_text"
                android:timePickerMode="spinner"/>
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/image_degree"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/gray"
                app:cornerRadius="25dp"
                android:text="Cancel"
                android:textAllCaps="false"
               />
            <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/image_degree"
                app:layout_constraintStart_toEndOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/orange"
                app:cornerRadius="25dp"
                android:text="OK"
                android:textAllCaps="false"
               />

            <!--android:drawableTop="@drawable/ic_baseline_expand_more_24"-->
        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>